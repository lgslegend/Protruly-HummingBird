<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/theme_home_list_divider_height"  >

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/theme_home_list_divider_height"
        android:background="@color/theme_home_list_divider_color"
        />
    <include layout="@layout/theme_list_title_bar"/>
    <RelativeLayout
        android:id="@+id/home_theme_category_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding_left_home_theme_title"
        android:paddingRight="@dimen/padding_right_home_theme_title"
        >
        <com.hb.thememanager.views.HomeThemeListItem
            android:id="@+id/item1"
            android:layout_width="@dimen/home_theme_list_item_covert_width"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:visibility="gone"
            android:layout_marginRight="@dimen/theme_home_list_divider_width"
            android:layout_marginBottom="@dimen/theme_home_list_divider_height"

        />
        <com.hb.thememanager.views.HomeThemeListItem
            android:id="@+id/item2"
            android:layout_width="@dimen/home_theme_list_item_covert_width"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/item1"
            android:layout_alignParentTop="true"
            android:visibility="gone"
            android:layout_marginRight="@dimen/theme_home_list_divider_width"
            android:layout_marginBottom="@dimen/theme_home_list_divider_height"

        />
        <com.hb.thememanager.views.HomeThemeListItem
            android:id="@+id/item3"
            android:layout_width="@dimen/home_theme_list_item_covert_width"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/item2"
            android:visibility="gone"
            android:layout_marginBottom="@dimen/theme_home_list_divider_height"

        />
        <com.hb.thememanager.views.HomeThemeListItem
            android:id="@+id/item4"
            android:layout_width="@dimen/home_theme_list_item_covert_width"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/item1"
            android:visibility="gone"
            android:layout_marginRight="@dimen/theme_home_list_divider_width"

        />
        <com.hb.thememanager.views.HomeThemeListItem
            android:id="@+id/item5"
            android:layout_width="@dimen/home_theme_list_item_covert_width"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/item2"
            android:layout_toRightOf="@id/item4"
            android:visibility="gone"
            android:layout_marginRight="@dimen/theme_home_list_divider_width"
        />
        <com.hb.thememanager.views.HomeThemeListItem
            android:id="@+id/item6"
            android:layout_width="@dimen/home_theme_list_item_covert_width"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/item3"
            android:layout_toRightOf="@id/item5"
            android:visibility="gone"
        />
        </RelativeLayout>

</LinearLayout>