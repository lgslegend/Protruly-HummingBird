<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/vr_wallpaper_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_vr_wallpaper_item_height"
        android:scaleType="center"
        android:background="@drawable/img_loading"
        />
    
    <TextView 
        android:id="@+id/vr_wallpaper_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#8A000000"
        android:layout_below="@id/vr_wallpaper_item"
        android:lines="1"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        />
    
</RelativeLayout>
