<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <View android:id="@+id/separate"
        android:layout_width="match_parent"
        android:layout_height="@dimen/theme_home_list_divider_height"
        android:background="@color/theme_home_list_divider_color"
        android:visibility="gone"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        >

    <TextView
        android:id="@+id/home_theme_category_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:paddingLeft="@dimen/padding_left_home_theme_title"
        android:textAppearance="@style/TextAppearance.HomeListTitle"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/home_theme_category_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/padding_right_home_theme_title"
        android:textAppearance="@style/TextAppearance.HomeListMore"
        android:drawableEnd="@com.hb:drawable/ic_next_page"
        android:text="@string/more" />
</RelativeLayout>
</LinearLayout>