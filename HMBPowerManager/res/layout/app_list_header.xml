<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/head_text_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/list_head_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/head_text_height"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/listhead_left_right_margin"
        android:textColor="@color/head_text"
        android:textSize="@dimen/head_text_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/length_4dp"
        android:background="@color/white" />
</LinearLayout>