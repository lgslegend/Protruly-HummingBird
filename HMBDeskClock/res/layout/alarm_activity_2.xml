<com.android.deskclock.worldclock.AlarmFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ex="http://schemas.android.com/apk/res-auto"
    android:id="@+id/alarm_activity_2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/alarm_dim_bg"
    android:layoutDirection="ltr">

    <!--<TextView-->
        <!--android:id="@+id/time_hour_minute"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginStart="28dp"-->
        <!--android:layout_marginTop="55.3dp"-->
        <!--android:textColor="@color/alarm_dim_text"-->
        <!--android:textSize="68dp" />-->

    <TextClock
        android:id="@+id/time_hour_minute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="55.3dp"
        android:format12Hour="@string/time_format_12_mode_new"
        android:format24Hour="@string/clock_24_hours_format"
        android:singleLine="true"
        android:textColor="@color/alarm_dim_text"
        android:textSize="68dp"/>

    <TextView
        android:id="@+id/time_date_weekday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginTop="144dp"
        android:textColor="@color/alarm_dim_text"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="307dp"
        android:textColor="@color/white"
        android:textSize="32dp"
        android:maxLines="1"
        android:maxEms="10"
        android:ellipsize="end"
        android:text="@string/alarm_getting_up" />

        <TextView
            android:id="@+id/snooze"
            android:layout_width="220dp"
            android:layout_height="54dp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="248dp"
            android:background="@drawable/bg_finish_timer_normal"
            android:gravity="center"
            android:textColor="@color/timer_finish_text_color"
            android:textSize="20dp"
            android:text="@string/alarm_snooze_label" />

        <TextView
            android:id="@+id/dismiss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginTop="23dp"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:text="@string/alarm_dismiss_label"/>
</com.android.deskclock.worldclock.AlarmFrameLayout>
