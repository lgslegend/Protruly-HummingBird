<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hb="http://schemas.android.com/apk/res/com.hb"
    android:id="@+id/sim_attach_icon_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/top_icon"
        android:layout_width="@dimen/conv_list_top_width"
        android:layout_height="@dimen/conv_list_top_width"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:src="@drawable/zzz_ic_top"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/sim_indicator_icon"
        android:layout_width="@dimen/conv_list_sim_width"
        android:layout_height="@dimen/conv_list_sim_width"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:src="@drawable/zzz_ic_sim_icon_1"
        android:visibility="gone" />
</LinearLayout>
