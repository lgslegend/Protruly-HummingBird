<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff">

    <TextView android:id="@+id/zzz_msg_subject"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom = "6dp"
        android:layout_width="match_parent"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:layout_below="@id/by_card"
        android:gravity="center_vertical"
        android:textSize="18sp"/>
    <LinearLayout
        android:id="@+id/zzz_attachment_parent"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/zzz_msg_subject"
        android:layout_marginTop="6dp"
        android:layout_marginBottom = "6dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd = "6dp"
        android:orientation="horizontal" >
        <ImageView android:id="@+id/zzz_has_file_attachment"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:gravity="center_vertical"
            android:scaleType="fitCenter"
            android:duplicateParentState="true"
            android:src="@drawable/ic_dialog_attach"
            />
        <TextView android:id="@+id/zzz_attach_Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/has_file_attachment"
            android:singleLine="true"
            android:ellipsize="middle"
            android:textColor="#000000"
            android:textSize="18sp"/>
    </LinearLayout>
</RelativeLayout>
