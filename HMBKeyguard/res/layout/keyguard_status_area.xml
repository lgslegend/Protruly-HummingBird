<!-- This is a view that shows general status information in Keyguard. -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:androidprv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center">
    <TextClock android:id="@+id/date_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/clock_white"
        android:textSize="14sp"
        android:textAllCaps="true"
        android:letterSpacing="0.15"
        android:gravity="center"
        />
    <!-- del by wxue  style="@style/widget_label"-->
    <!-- add by wxue   android:textSize="14sp"-->
    <!-- add by wxue 20170412 start -->
    <TextClock android:id="@+id/week_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/clock_white"
        android:textSize="14sp"
        android:layout_marginStart="6dp"
        android:textAllCaps="true"
        android:letterSpacing="0.15"
        android:gravity="center"
        />
    <!-- add by wxue 20170412 end -->
    <TextView android:id="@+id/alarm_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="6dp"
        android:drawableStart="@drawable/ic_access_alarms_big"
        android:textColor="@color/clock_white"
        android:letterSpacing="0.15"
        android:textAllCaps="true"
        android:textSize="14sp"
        android:layout_marginStart="6dp"
        android:gravity="center"
        android:visibility="gone"
        />
    <!-- del by wxue  style="@style/widget_label"-->
    <!-- add by wxue   android:textSize="14sp"-->
    <!-- modify by wxue android:textColor="@color/clock_gray" -->
</LinearLayout>
