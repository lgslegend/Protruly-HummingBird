<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CategoryHorizontalStyle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">99.0dip</item>
    </style>

    <style name="CategoryLeftButtonStyle">
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="CategoryMiddleButtonStyle">
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="CategoryRightButtonStyle">
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="CategoryLeftButtonTextStyle">
        <item name="android:textSize">13.0sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">0dip</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="CategoryMiddleButtonTextStyle">
        <item name="android:textSize">13.0sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">0dip</item>
        <item name="android:paddingLeft">34.0dip</item>
        <item name="android:paddingRight">34.0dip</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="CategoryRightButtonTextStyle">
        <item name="android:textSize">13.0sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">0dip</item>
        <item name="android:includeFontPadding">false</item>
    </style>


    <style name="CategoryLeftLegendTextStyle">
        <item name="android:textSize">10.3sp</item>
        <item name="android:textColor">#aaaaaa</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">5.0dp</item>
        <item name="android:text">@string/unknow_size_info</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="CategoryMiddleLegendTextStyle">
        <item name="android:textSize">10.3sp</item>
        <item name="android:textColor">#aaaaaa</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">5.0dip</item>
        <item name="android:text">@string/unknow_size_info</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="CategoryRightLegendTextStyle">
        <item name="android:textSize">10.3sp</item>
        <item name="android:textColor">#aaaaaa</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">5.0dip</item>
        <item name="android:text">@string/unknow_size_info</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="InformationTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Widget.EmptyView" parent="@android:style/Widget.TextView">
        <item name="android:textSize">14.0dip</item>
        <item name="android:textColor">#4a000000</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/empty_message</item>
        <item name="android:drawableTop">@drawable/empty_icon</item>
        <item name="android:drawablePadding">17.0dip</item>
    </style>

    <style name="FileNameStyle">
         <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

    <style name="FM.Theme.Light" parent="com.hb:Theme.Hb.Material.Light">
        <item name="com.hb:windowLayoutStyle">@style/WindowStyle.Light</item>
        <item name="android:toolbarStyle">@style/myToolbarStyle</item>
    </style>

    <style name="WindowStyle.Light" parent="com.hb:WindowStyle.Light">
        <item name="com.hb:hasBackIcon">false</item>
        <item name="com.hb:windowHasToolbar">true</item>
        <!-- <item name="com.hb:windowLayout">@layout/screen_simple</item> -->
        <item name="com.hb:toolbarOverlay">false</item>
    </style>

    <style name="myToolbarStyle" parent="com.hb:style/ToolbarStyle">

    </style>

    <style name="FileOpenStyle">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/file_open_background</item>
        <item name="android:layout_width">@dimen/file_open_width</item>
        <item name="android:layout_height">@dimen/file_open_height</item>
    </style>

    <style name="FileOpenTextStyle">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">#e6000000</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">8.0dip</item>
    </style>

    <!-- progressBar宽条样式 -->
    <style name="tallerBarStyle" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@android:drawable/progress_horizontal</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_horizontal</item>
        <item name="android:minHeight">40dip</item>
        <item name="android:maxHeight">60dip</item>
    </style>

    <style name="list_first_line_text_style">
        <item name="android:textColor">@color/category_list_file_name_text_color</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="list_second_line_text_style">
        <item name="android:textColor">@color/category_list_sub_item_text_color</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginTop">1.67dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">marquee</item>
    </style>

</resources>