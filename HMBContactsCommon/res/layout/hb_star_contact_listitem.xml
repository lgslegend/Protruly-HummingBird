<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/star_contacts_header_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
     >

    <ImageView
        android:id="@+id/star_contacts_header"
        android:layout_width="@dimen/contact_header_item_img_width"
        android:layout_height="@dimen/contact_header_item_img_width" />

    <TextView
        android:id="@+id/star_contacts_name"
        android:layout_width="@dimen/contact_header_item_text_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/contact_header_item_name_margin_top"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/contact_header_item_name_text_color"
        android:textSize="@dimen/contact_header_item_name_text_size" />

</LinearLayout>