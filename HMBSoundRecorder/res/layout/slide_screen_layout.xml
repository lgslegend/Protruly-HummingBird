<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <cn.com.protruly.soundrecorder.lockscreen.RecordWaveView
        android:id="@+id/waveView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/translucent"/>

    <TextView
        android:id="@+id/time_m_d_w"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/time"
        android:textSize="14sp"
        android:layout_above="@id/waveView"
        android:layout_marginBottom="45dp"
        android:layout_marginLeft="34dp"/>

    <TextView
        android:id="@+id/time_h_m"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="68sp"
        android:text="@string/time"
        android:layout_above="@id/time_m_d_w"
        android:layout_marginBottom="9dp"
        android:layout_marginLeft="28dp"/>

    <TextView
        android:id="@+id/time_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        android:text="@string/time"
        android:layout_below="@id/waveView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="23dp"
        android:textSize="14sp"
        android:text="@string/slid_warn"/>
</RelativeLayout>