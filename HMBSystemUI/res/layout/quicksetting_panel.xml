<com.android.systemui.qs.QSPanelViewForPullUp
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:systemui="http://schemas.android.com/apk/res-auto"
    android:id="@+id/quicksetting"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#00000000"> 
	<View
	    android:id="@+id/back"
	    android:layout_height="@dimen/quicksetting_background_height_port"
	    android:layout_width="match_parent"
	    android:background="#b0000000" /> 
	<com.android.systemui.qs.QSPanelBlurView
        android:id="@+id/blur_view"
        android:layout_height="@dimen/quicksetting_panel_height_port"
    	android:layout_width="match_parent"
    	android:layout_gravity="bottom|center_horizontal"
    	android:background="#00000000"
    	android:gravity="center"
    	android:translationY="@dimen/quicksetting_panel_height_port"/>
    <com.android.systemui.qs.QSPanelPullUp
        android:id="@+id/qspanel_pullup"
        android:layout_height="wrap_content"
    	android:layout_width="wrap_content"
    	android:layout_gravity="bottom|center_horizontal"
    	android:gravity="center"
    	android:background="#00000000"
    	android:translationY="@dimen/quicksetting_panel_height_port"/>
    <!-- android:background="@drawable/quicksetting_bg" -->
	<ImageView 
        android:id="@+id/pulldownview"
        android:layout_height="40dp"
    	android:layout_width="150dp"
    	android:layout_gravity="bottom|center_horizontal"
    	android:gravity="center"
    	android:src="@drawable/qs_pulldown_2"
    	android:scaleType="center"
    	android:background="#00ff0000"
    	android:layout_marginBottom="275dp"
    	android:translationY="@dimen/quicksetting_panel_height_port"/>
</com.android.systemui.qs.QSPanelViewForPullUp>
<!-- hb add by tangjun end -->