    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hb_main_list_item_height"
        android:paddingBottom="@dimen/hb_main_list_padding_vertical"
        android:paddingLeft="@dimen/hb_main_list_padding_horizontal"
        android:paddingRight="@dimen/hb_main_list_padding_horizontal"
        android:paddingTop="@dimen/hb_main_list_padding_vertical" >
        
        <!--android:paddingTop="@dimen/hb_main_list_padding_vertical" 
         android:paddingBottom="@dimen/hb_main_list_padding_vertical" -->

        <ImageView
            android:id="@+id/id_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:contentDescription="@null" />

        <ImageView
            android:id="@+id/id_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:src="@drawable/hb_more_attr_tag" />

        <TextView
            android:id="@+id/id_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/hb_item_song_name_marginleft"
            android:layout_toRightOf="@id/id_icon"
            android:singleLine="true"
            android:textSize="@dimen/hb_item_song_name_text" />

        <TextView
            android:id="@+id/id_song_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/id_more"
            android:layout_marginRight="@dimen/hb_item_song_size_margintop"
            android:textSize="@dimen/hb_item_song_size_text" />
      	<ImageView 
      	    android:id="@+id/hb_red_point"
      	    android:layout_width="wrap_content"
      	    android:layout_height="wrap_content"
      	    android:src="@drawable/hb_red_background"
      	    android:layout_toRightOf="@id/id_name"
      	    android:layout_marginLeft="4dp"
      	    android:layout_above="@id/id_name"
      	    android:visibility="gone"
      	    android:layout_marginBottom="-1dp"/>
    </RelativeLayout>

<!-- </FrameLayout> -->