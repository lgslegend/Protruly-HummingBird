<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <FrameLayout
        android:id="@+id/id_img_1"
        android:layout_width="106.7dp"
        android:layout_height="fill_parent"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/hb_show_img_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/hb_new_album_mask" />

        <CheckBox
            android:id="@+id/id_img_checked_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/hb_lyric_checked"
            android:button="@null" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/id_img_2"
        android:layout_width="106.7dp"
        android:layout_height="fill_parent"
        android:layout_marginLeft="8dp"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/hb_show_img_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/hb_new_album_mask" />

        <CheckBox
            android:id="@+id/id_img_checked_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/hb_lyric_checked"
            android:button="@null" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/id_img_3"
        android:layout_width="106.7dp"
        android:layout_height="fill_parent"
        android:layout_marginLeft="8dp"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/hb_show_img_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/hb_new_album_mask" />

        <CheckBox
            android:id="@+id/id_img_checked_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/hb_lyric_checked"
            android:button="@null" />
    </FrameLayout>

</LinearLayout>