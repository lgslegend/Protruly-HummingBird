    </style>

    <style name="Theme.PlayerActivity" parent="@com.hb:Theme.Hb.Material.Light">
        <item name="android:seekBarStyle">@com.hb:style/Widget.Hb.Material.Light.SeekBar</item>
        <item name="android:navigationBarColor">@color/color_navi_back</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
