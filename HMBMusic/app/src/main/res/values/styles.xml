    <style name="Theme.Music" parent="@com.hb:Theme.Hb.Material.Light"></style>

    <style name="HB_SeekBar" parent="@android:style/Widget.Holo.Light.SeekBar">
        <item name="android:progressDrawable">@drawable/seekbar_player_progressdrawable</item>
